html, body, .stage, .ring, .img  
    width 100%  
    height 100%  
    transform-style preserve-3d  
    user-select none  
  
html, body, .stage  
    overflow hidden  
  
body  
    zoom 1 
    position relative
    height 100vh
    min-height 600px
    background url(../images/body-bg.png) center no-repeat fixed 
    background-size cover
  
div, svg  
    position absolute  
  
.container  
    perspective 2000px  
    width 300px  
    height 400px  
    left 50%  
    top 50%  
    transform translate(-50%, -50%)